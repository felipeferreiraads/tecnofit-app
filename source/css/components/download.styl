.download
    width 100%
    background url(../img/bg-downloads.jpg) bottom right no-repeat #ea2281
    background-size auto 100%
    padding 11rem 0
    +below($bp.xs)
        padding 7rem 0    
    .grid-download
        display flex
        +below($bp.md)
            flex-direction column
            align-items: center
        .left
            flex 1
            h2
                font-size 7rem
                color #fff
                max-width 90%
                margin-bottom 4rem
                +below($bp.lg)
                    font-size 5rem
                +below($bp.md)
                    text-align center
                    max-width 100%
                +below($bp.xs)
                    font-size 3rem
            p
                font-size 2.2rem
                line-height 1.36
                color #fff
                max-width 90%
                +below($bp.md)
                    text-align center
                    max-width 100%
        .links
            flex-basis 55rem
            margin-left 9rem
            padding-left 5%
            display flex
            flex-direction column
            justify-content: center
            +below($bp.xs)
                flex-direction row
                justify-content: space-between
            +below($bp.lg)
                margin-left 0
            +below($bp.md)
                flex-basis auto
                width 55rem
                max-width 100%
                padding-left 0
                margin-top 5rem            
            .row
                width 100%
                display flex
                justify-content: space-between
                align-items: center
                +below($bp.xs)
                    flex-flow column
                    width 48%
                    img 
                        max-width 100% !important
                        margin-bottom 2rem
                &:first-child
                    margin-bottom 3.5rem
                    +below($bp.md)
                        margin 0
                .logo
                    width 11.9rem
                    margin-right 5rem
                    +below($bp.xs)
                        margin-right 0
                .app-store
                    width 13rem
                .google-play
                    width 16.2rem